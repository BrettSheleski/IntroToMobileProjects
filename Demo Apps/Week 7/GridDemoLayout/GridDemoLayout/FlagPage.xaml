        <BoxView Grid.Row="5" Grid.Column="1" Color="White" />
        <BoxView Grid.Row="6" Grid.Column="1" Color="Red" />
        
        <BoxView Grid.Row="7" Grid.ColumnSpan="2" Color="White" />
        <BoxView Grid.Row="8" Grid.ColumnSpan="2" Color="Red" />
        <BoxView Grid.Row="9" Grid.ColumnSpan="2" Color="White" />
        <BoxView Grid.Row="10" Grid.ColumnSpan="2" Color="Red" />
        <BoxView Grid.Row="11" Grid.ColumnSpan="2" Color="White" />
        <BoxView Grid.Row="12" Grid.ColumnSpan="2" Color="Red" />
        
    </Grid>
</ContentPage>